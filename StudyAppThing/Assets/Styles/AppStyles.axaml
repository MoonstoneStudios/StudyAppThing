<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="Purple">
            <!-- Add Controls for Previewer Here -->
			<TextBlock Classes="h2" Text="Header" />
        </Border>
    </Design.PreviewWith>
	
    <!-- Add Styles Here -->
	<Style Selector="TextBlock.h1">
		<Setter Property="FontFamily" Value="/Assets/Fonts/Montserrat-ExtraBold.ttf#Montserrat" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontSize" Value="46" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<Style Selector="TextBlock.h2">
		<Setter Property="FontFamily" Value="/Assets/Fonts/Montserrat-SemiBold.ttf#Montserrat" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontSize" Value="36" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>


	<Style Selector="TextBlock.h3">
		<Setter Property="FontFamily" Value="/Assets/Fonts/Montserrat-SemiBold.ttf#Montserrat" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontSize" Value="24" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>


</Styles>
